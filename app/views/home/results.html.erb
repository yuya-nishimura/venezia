<% if @results.blank? %>
  <h2>検索にヒットする作品はありませんでした。</h2>
  <% else %>
  <% @results.each do |result| %>
    <h2><%= result["title"] %></h2>

    <%= form_for :movie, url: movies_path do |f| %>
      <%= f.collection_select :list_id, @lists, :id, :name %>
      <%= f.hidden_field :title, value: result["title"] %>
      <%= f.submit '登録', class: "btn btn-primary" %>
    <% end %>

      <div>
        <%= image_tag "https://image.tmdb.org/t/p/w200#{result["poster_path"]}" %>
      </div>
      <div>
        <p><%= "公開日：#{result["release_date"]}" %></p>
        <p><%= "概要：#{result["overview"]}" %></p>
      </div>
    -----------------------------------
  <% end %>
<% end %>